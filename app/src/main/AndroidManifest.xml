<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.skysoft.slobodyanuk.transitionviewanimation">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.activity.GridActivity" />

        <activity
            android:name=".view.activity.SharedElementActivity"
            android:theme="@style/DetailsActivityTheme" />

        <activity
            android:name=".view.activity.ListActivity"
            android:theme="@style/ListActivityTheme" />

        <activity android:name=".view.activity.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".view.activity.CallActivity"
            android:theme="@style/TransparentNavigation"/>
    </application>

</manifest>